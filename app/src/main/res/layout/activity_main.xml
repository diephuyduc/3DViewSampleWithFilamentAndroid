<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <SurfaceView
        android:id="@+id/carLiftSurfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <io.github.sceneview.SceneView
        android:id="@+id/carliftSceneView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DOWN" />

        <Button
            android:id="@+id/idleFinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IDLE FINAL" />

        <Button
            android:id="@+id/idleMid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IDLE MID" />

        <Button
            android:id="@+id/idUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Up" />

        <Button
            android:id="@+id/speedUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SPEED UP" />

        <Button
            android:id="@+id/speedDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SPEED DONW" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>